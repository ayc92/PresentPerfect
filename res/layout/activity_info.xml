<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/p_layout"
	android:background="#cfcece"
    tools:context=".Info" >
<ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center_horizontal">
    <LinearLayout
    android:id="@+id/topPanel"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="#04476d"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
     <ImageView
        android:id="@+id/skipback"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="45dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:src="@drawable/skipb" />
    <ImageView
        android:id="@+id/playrec"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:onClick="playback"
        android:src="@drawable/playb" />
        <ImageView
        android:id="@+id/skipforward"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@android:color/transparent"
        android:src="@drawable/skipf" />
    </LinearLayout>
<TextView
    	android:id="@+id/speechtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="#52B848"
        android:layout_marginTop="30dp"
		android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:text="Time: 23 min"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />
<TextView
    android:id="@+id/wordspermin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="#52B848"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="Speed: 130 wpm"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

<LinearLayout
    android:id="@+id/firstlist"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recorder_bg"
    android:clickable="true"
    android:onClick="toggle_contents"
    android:layout_marginTop="30dp">

<TextView
    android:id="@+id/wordcounts"
    android:fontFamily="sans-serif-light"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@drawable/recorder_bg"
        android:textColor="#2b7cc0"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:text="Buzzword Counts"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/arrowdownblue" />
</LinearLayout>
<LinearLayout
    android:id="@+id/firstPanel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:background="#ffffff"
    android:layout_height="wrap_content">
		<Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/word_choices"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:prompt="@string/default_word" />
		<LinearLayout
    android:id="@+id/countList"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    </LinearLayout>
	</LinearLayout>
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:clickable="true"
    	android:onClick="toggle_contents2"
    	android:layout_marginTop="30dp"
    	android:background="@drawable/recorder_bg"
    	android:layout_gravity="center_horizontal">
		<TextView
    	android:id="@+id/comments"
    	android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        android:background="@drawable/recorder_bg"
        android:textColor="#2b7cc0"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:text="Comments"/>
		    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/arrowdownblue" />
		</LinearLayout>
		<LinearLayout
    android:id="@+id/commentlist"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content">
    </LinearLayout>
		<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:clickable="true"
    	android:onClick="toggle_contents3"
    	android:layout_marginTop="30dp"
    	android:background="@drawable/recorder_bg"
    	android:layout_gravity="center_horizontal">
		<TextView
    	android:id="@+id/notes"
    	android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        android:background="@drawable/recorder_bg"
        android:textColor="#2b7cc0"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:text="Notes"/>
		    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/arrowdownblue" />
		</LinearLayout>
		<LinearLayout
    android:id="@+id/thirdPanel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:background="#ffffff"
    android:layout_height="wrap_content">
			<EditText
    	android:id="@+id/notesection"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:background="#ffffff"
    	android:textSize="20sp"
    	android:paddingLeft="20dp"
    	android:paddingBottom="20dp"
    	android:hint="Type notes here"
    />
			</LinearLayout>
			     <ImageView
        android:id="@+id/skipback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
    	android:onClick="shareAction"
        android:src="@drawable/shareblue" />
</LinearLayout>
</ScrollView>
</LinearLayout>
