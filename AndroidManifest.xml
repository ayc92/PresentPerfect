<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.radishugrads.presentperfect"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_black"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.radishugrads.presentperfect.RecorderActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.radishugrads.presentperfect.RecList"
            android:label="@string/app_name"
            android:configChanges="orientation" >
        </activity>
        <activity
            android:name="com.radishugrads.presentperfect.OptionsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.radishugrads.presentperfect.Info"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.radishugrads.presentperfect.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.radishugrads.presentperfect.TabList"
            android:label="@string/title_activity_tab_list" >
        </activity>
    </application>

</manifest>
